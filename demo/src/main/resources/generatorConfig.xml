<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!-- 驱动包绝对路径 -->
    <classPathEntry location="E:\Maven\localRepo\mysql\mysql-connector-java\8.0.19\mysql-connector-java-8.0.19.jar"/>

    <context id="systemDemo" targetRuntime="MyBatis3">

        <property name="javaFileEncoding" value="UTF-8"/>

        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

        <!-- 不输出注释 -->
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/systemdemo?serverTimezone=Asia/Shanghai"
                        userId="root"
                        password="root">
        </jdbcConnection>


        <!-- 不强制把所有的数字类型转化为BigDecimal -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.lhy.systemdemo.pojo" targetProject="D:\Person\Project\front_back\SpringBoot_vue\demo\src\main\java">
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper" targetProject="D:\Person\Project\front_back\SpringBoot_vue\demo\src\main\resources">
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.lhy.systemdemo.dao" targetProject="D:\Person\Project\front_back\SpringBoot_vue\demo\src\main\java">
        </javaClientGenerator>
        <table tableName="t_role"
               enableCountByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               enableUpdateByExample="false"
               domainObjectName="role.Role"
               mapperName="role.RoleMapper">
            <generatedKey column="id" sqlStatement="MySql"/>
