<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lhy.systemdemo.dao.user.UserMapper">
    <sql id="select_items">
       id as id,
            user_name as userName,
            password as password,
            salt as salt,
            phone as phone,
            mail as mail,
            name as name,
            enabled as enabled
    </sql>
    <select id="queryUsers" resultType="com.lhy.systemdemo.pojo.UserVO">
        select
        <include refid="select_items"/>
        from
        t_user
        where 1=1
    </select>

    <select id="queryUserByName" parameterType="string" resultType="com.lhy.systemdemo.pojo.User">
        select
        <include refid="select_items"/>
        from
        t_user
        where
        name = #{name}
    </select>

        <update id="updateUser" parameterType="com.lhy.systemdemo.pojo.User">
        update t_user
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="userName != null">
                user_name = #{userName},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="mail != null">
                mail = #{mail},
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <update id="changeUserStatus"  parameterType="com.lhy.systemdemo.pojo.User" timeout="3">
        update t_user
        <set>
            <if test="enabled != null">
                enabled = #{enabled}
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>
</mapper>
